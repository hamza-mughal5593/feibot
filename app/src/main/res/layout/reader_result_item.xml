<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:gravity="center_vertical"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/orderNumberTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="序号"
        android:textColor="@color/white" />

    <TextView
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/orderNumberTv"
        android:id="@+id/bibNumberTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="A00008"
        android:textColor="@color/white" />

    <TextView
        android:visibility="gone"
        android:id="@+id/epcTv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="E12345678"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/white"
         />


    <TextView
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/bibNumberTv"
        android:id="@+id/timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="12sp"
        android:text="yy-MM-dd~HH:mm:ss:SS"
        android:textColor="@color/white"
         />

    <Button
        android:id="@+id/clickGunBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:text="Post"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:visibility="gone"
        android:id="@+id/countTv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="30"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_alignParentBottom="true"
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        />

